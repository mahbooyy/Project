@model List<School.Domain.ViewModels.LoginAndRegistration.ArchivedItemViewModel>
@{
    Layout = "Layout4";
    ViewData["Title"] = "Архив";
}

<h2>Архив</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Дата архивации</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.ProductName</td>
    <td>@item.Price руб</td>
    <td>@item.Quantity</td>
    <td>
        <button class="btn btn-sm btn-danger" onclick="removeFromArchive('@item.ProductName')">Удалить</button>
    </td>
</tr>}
    </tbody>
</table>