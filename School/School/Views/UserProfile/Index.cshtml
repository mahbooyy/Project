        @model School.Domain.Models.UserProfile

        @{
            Layout = "Layout4";
            ViewData["Title"] = "Профиль";
        }

        <h1>Профиль пользователя</h1>
        <p><strong>Имя:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Дата рождения:</strong> @Model.DateOfBirth.ToShortDateString()</p>
        <p><strong>О себе:</strong> @Model.Bio</p>

        <a asp-action="Edit">Редактировать профиль</a>
